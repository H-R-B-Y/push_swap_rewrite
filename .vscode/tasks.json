{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
		{
			"label": "Default Make",
			"type": "shell",
			"command": "make",
			"args": [
				"CFLAGS=\"-g3 -O0\"",
				"all",
				"clean"
			],
			"problemMatcher": [],
			"options": {
				"cwd": "${fileDirname}"
			}
		}
	],
	"version": "2.0.0"
}